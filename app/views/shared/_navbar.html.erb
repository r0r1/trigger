            </div>
          <% else %>
            <div class="flex space-x-2">
              <%= link_to "Sign in", new_user_session_path, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="-mr-2 flex md:hidden">
