

<% content_for :head do %>
  <meta name="turbo-cache-control" content="no-cache">
<% end %>

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-10 flex items-end justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 tracking-tight">MCP Servers</h1>
      <p class="mt-2 text-lg text-gray-600">Configure Model Context Protocol servers to extend capabilities.</p>
    </div>
    <div class="flex items-center space-x-2 text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded-full">
      <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
      <span>MCP Client Active</span>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6">
    <% @providers.each do |provider| %>
      <% connection = @connections[provider] %>
      <% is_connected = connection&.connected == true %>
      
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow duration-300">
        <div class="p-6">
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0 p-3 bg-gray-50 rounded-xl border border-gray-100">
                <% case provider %>
                <% when 'github' %>
                  <svg class="h-8 w-8 text-gray-900" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" /></svg>
                <% when 'gitlab' %>
                  <svg class="h-8 w-8 text-orange-600" fill="currentColor" viewBox="0 0 24 24"><path d="M22.65 14.39L12 22.13 1.35 14.39a.84.84 0 0 1-.3-.94l1.22-3.78 2.44-7.51A.42.42 0 0 1 4.82 2a.43.43 0 0 1 .41.26l2.47 7.6h8.6l2.47-7.6a.43.43 0 0 1 .41-.26.42.42 0 0 1 .11.02l2.44 7.51 1.22 3.78a.84.84 0 0 1-.3.94z"/></svg>
                <% when 'bitbucket' %>
                  <svg class="h-8 w-8 text-blue-600" fill="currentColor" viewBox="0 0 24 24"><path d="M2.65 3C2.05 3 1.55 3.5 1.6 4.1L2.7 20.4C2.75 21.3 3.5 22 4.4 22H19.6C20.5 22 21.25 21.3 21.3 20.4L22.4 4.1C22.45 3.5 21.95 3 21.35 3H2.65ZM13.8 15.4H10.2L9.4 9.6H14.6L13.8 15.4Z" /></svg>
                <% end %>
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900 capitalize flex items-center gap-2">
                  @modelcontextprotocol/server-<%= provider %>
                  <% if is_connected %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                      Running
                    </span>
                  <% else %>
                     <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-600">
                      Stopped
                    </span>
                  <% end %>
                </h3>
                <p class="text-sm text-gray-500 font-mono mt-1">stdio</p>
              </div>
            </div>
            
            <div class="flex items-center gap-3">
               <% if connection %>
                  <button type="button" 
                          onclick="testConnection('<%= provider %>')"
                          id="test-btn-<%= provider %>"
                          class="px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                    Retry Connection
                  </button>
               <% end %>
               <button type="button" onclick="toggleConfig('<%= provider %>')" class="px-3 py-1.5 text-sm font-medium text-white bg-gray-900 rounded-lg hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-colors">
                 Configure
               </button>
            </div>
          </div>

          <div id="config-<%= provider %>" class="<%= connection ? 'hidden' : '' %> border-t border-gray-100 pt-6 mt-6 animate-fadeIn">
             <%= form_with url: settings_update_path, method: :post, local: true, class: "space-y-6" do |f| %>
                <%= f.hidden_field :provider, value: provider %>
                
                <div class="bg-gray-900 rounded-lg p-4 font-mono text-sm">
                  <div class="text-gray-400 mb-4 text-xs uppercase tracking-wider">Environment Variables</div>
                  
                  <div class="space-y-4">
                    <% if provider == 'bitbucket' %>
                      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                          <label class="block text-gray-500 mb-1">BITBUCKET_USERNAME</label>
                          <%= f.text_field :username, value: connection&.username, class: "w-full bg-gray-800 border-gray-700 rounded text-gray-200 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "username" %>
                        </div>
                        <div>
                          <label class="block text-gray-500 mb-1">BITBUCKET_WORKSPACE</label>
                          <%= f.text_field :workspace, value: connection&.workspace, class: "w-full bg-gray-800 border-gray-700 rounded text-gray-200 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "workspace" %>
                        </div>
                      </div>
                    <% end %>

                    <div>
                      <label class="block text-gray-500 mb-1">
                        <%= case provider
                            when 'github' then 'GITHUB_PERSONAL_ACCESS_TOKEN'
                            when 'gitlab' then 'GITLAB_PERSONAL_ACCESS_TOKEN'
                            when 'bitbucket' then 'BITBUCKET_APP_PASSWORD'
                            end %>
                      </label>
                      <% 
                        begin
                          token_value = connection&.access_token
                        rescue ActiveRecord::Encryption::Errors::Decryption
                          token_value = nil
                        end
                      %>
                      <%= f.password_field :access_token, value: token_value, class: "w-full bg-gray-800 border-gray-700 rounded text-gray-200 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "token_..." %>
                    </div>
                  </div>
                </div>

                <div class="flex items-center justify-between">
                  <div class="text-sm text-gray-500">
                    <a href="#" class="hover:text-gray-900 underline decoration-gray-300 underline-offset-2">View Documentation</a>
                  </div>
                  <div class="flex items-center gap-3">
                    <% if connection %>
                       <%= link_to settings_update_path(provider: provider, access_token: ""), data: { turbo_method: :post, turbo_confirm: "Are you sure you want to delete this server configuration?" }, class: "text-sm text-red-600 hover:text-red-800 font-medium" do %>
                        Delete
                      <% end %>
                    <% end %>
                    <%= f.submit "Save Configuration", class: "cursor-pointer inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                  </div>
                </div>
             <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Error Modal -->
<div id="error-modal" class="hidden fixed inset-0 z-50 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-gray-900 bg-opacity-75 transition-opacity" onclick="closeErrorModal()"></div>
    <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
      <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
        <div class="sm:flex sm:items-start">
          <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
            <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left flex-1">
            <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
              MCP Server Error
            </h3>
            <div class="mt-2">
              <p class="text-sm text-gray-500 mb-2">
                Failed to start <span id="error-provider" class="font-semibold"></span> server.
              </p>
              <div class="mt-3 bg-gray-900 rounded-md p-3 overflow-x-auto">
                <p class="text-xs font-mono text-red-400" id="error-message"></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
        <button type="button" onclick="closeErrorModal()" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-gray-900 text-base font-medium text-white hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 sm:ml-3 sm:w-auto sm:text-sm">
          Dismiss
        </button>
      </div>
    </div>
  </div>
</div>

<script>
function toggleConfig(provider) {
  const configDiv = document.getElementById(`config-${provider}`);
  configDiv.classList.toggle('hidden');
}

function testConnection(provider) {
  const btn = document.getElementById(`test-btn-${provider}`);
  const originalText = btn.textContent;
  
  btn.disabled = true;
  btn.textContent = 'Initializing...';
  
  const token = document.querySelector('meta[name="csrf-token"]').content;
  
  fetch('/settings/test_connection', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': token,
      'Accept': 'application/json'
    },
    body: JSON.stringify({ provider: provider })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      showNotification('MCP Server ' + provider + ' connected successfully', 'success');
      setTimeout(() => location.reload(), 1000);
    } else {
      showErrorModal(provider, data.error || data.message);
    }
  })
  .catch(error => {
    console.error('Error:', error);
    showErrorModal(provider, 'Connection failed. Check console for details.');
  })
  .finally(() => {
    btn.disabled = false;
    btn.textContent = originalText;
  });
}

function showNotification(message, type) {
  const notification = document.createElement('div');
  notification.className = `fixed bottom-4 right-4 z-50 px-6 py-4 rounded-lg shadow-lg ${
    type === 'success' ? 'bg-gray-900' : 'bg-red-600'
  } text-white max-w-md animate-slide-in font-mono text-sm`;
  
  notification.innerHTML = `
    <div class="flex items-center gap-3">
      <div class="w-2 h-2 rounded-full ${type === 'success' ? 'bg-green-400' : 'bg-red-400'}"></div>
      <div>${message}</div>
    </div>
  `;
  
  document.body.appendChild(notification);
  setTimeout(() => {
    notification.classList.add('animate-slide-out');
    setTimeout(() => notification.remove(), 300);
  }, 5000);
}

function showErrorModal(provider, errorMessage) {
  const modal = document.getElementById('error-modal');
  const providerSpan = document.getElementById('error-provider');
  const errorMessageP = document.getElementById('error-message');
  
  providerSpan.textContent = '@modelcontextprotocol/server-' + provider;
  errorMessageP.textContent = errorMessage;
  
  modal.classList.remove('hidden');
  document.body.style.overflow = 'hidden';
}

function closeErrorModal() {
  const modal = document.getElementById('error-modal');
  modal.classList.add('hidden');
  document.body.style.overflow = '';
}
</script>

<style>
@keyframes slide-in {
  from { transform: translateY(100%); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}
@keyframes slide-out {
  from { transform: translateY(0); opacity: 1; }
  to { transform: translateY(100%); opacity: 0; }
}
.animate-slide-in { animation: slide-in 0.3s ease-out; }
.animate-slide-out { animation: slide-out 0.3s ease-in; }
.animate-fadeIn { animation: fadeIn 0.3s ease-out; }
@keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
</style>
